[user]
  name = Keith Haber
  email = kjhaber@gmail.com
[color]
  ui = true
[alias]
  abort = reset --hard HEAD
  c = commit
  ca = commit --amend
  co = checkout
  cob = checkout -b
  d = diff
  dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
  dag-all = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order --all
  dc = diff --cached
  dh = diff HEAD^
  diffw = diff --word-diff
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  lone = log --oneline
  mvbranch = "!f() { \
    git branch -f $1 HEAD && git checkout $1 ; \
  }; f"
  glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  pr = pull --rebase
  recommit = commit --amend --no-edit
  s = status
  stash-all = stash push --include-untracked
  tunein = update-index --no-assume-unchanged
  tuneout = update-index --assume-unchanged
  tunelist = !git ls-files -v | grep "^[[:lower:]]"
  undo = reset HEAD~1
  unstage = reset HEAD --
[core]
  autocrlf = false
  excludesfile = ~/.gitignore_global
  pager = less -FMRiX
[push]
  default = simple
[credential]
  helper = osxkeychain

[rebase]
	autostash = true
	autosquash = true
[rerere]
  enabled = true
[pull]
	ff = only
[include]
  path = ~/.gitconfig-local

